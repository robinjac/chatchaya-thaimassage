{
  "name": "chatchaya-thaimassage",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "bun run build:html && bun run build:css && bun run build:js",
    "build:js": "NODE_ENV=production bun build --minify ./src/production.tsx --outdir ./dist",
    "build:html": "bun render.tsx",
    "build:css": "NODE_ENV=production bunx tailwindcss -m -i ./styles.css -o ./dist/styles.css",
    "deploy": "bun deploy.ts",
    "preview": "bunx serve ./dist"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^11.2.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.0",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
